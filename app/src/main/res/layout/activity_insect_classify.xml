<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Function.activity.InsectClassify">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.xuexiang.xui.widget.actionbar.TitleBar
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="0dp"
            android:background="@color/xui_config_color_titlebar"
            app:tb_barHeight="65dp"
            app:tb_dividerColor="@color/xui_config_color_titlebar"
            app:tb_subTitleText="查看昆虫分类信息"
            app:tb_titleText="分类" />
        <ImageView
            android:id="@+id/classImg"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@drawable/bg_border"
            android:src="@drawable/uploadpic"
            android:scaleType="center"
            />
        <com.xuexiang.xui.widget.button.roundbutton.RoundButton
            android:id="@+id/classButton"
            android:layout_below="@id/classImg"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            style="@style/RoundButton.Auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击分类"
            />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>